{% trans_default_domain 'BkstgFOSUserBundle' %}

{{ form_start(form) }}
  <div class="form-row">
    <div class="col-md-2">
      {{ form_row(form.enabled) }}
    </div>
    <div class="col">
      {{ form_row(form.username) }}
    </div>
  </div>
  {{ form_widget(form) }}
  <div class="form-group">
    <a href="{{ url('bkstg_user_admin_index') }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
    <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
  </div>
{{ form_end(form) }}
