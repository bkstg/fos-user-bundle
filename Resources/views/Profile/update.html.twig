{% extends '@BkstgCore/layout.html.twig' %}
{% set page_title = 'Edit profile'|trans %}
{% form_theme form.image '@SonataMedia/Form/media_widgets.html.twig' %}
{% form_theme form.height '@BkstgCore/Form/units_widgets.html.twig' %}
{% form_theme form.weight '@BkstgCore/Form/units_widgets.html.twig' %}
{% block main %}
  <div class="container-fluid">
    {% include '@BkstgCore/Partials/header.html.twig' with { 'title': page_title } only %}
    {% include '@BkstgFOSUser/Profile/_actions.html.twig' %}
    {{ form_start(form) }}
      {{ form_widget(form) }}
      <div class="form-group">
        <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
      </div>
    {{ form_end(form) }}
    {% include '@BkstgCore/partials/footer.html.twig' %}
  </div>
{% endblock %}
